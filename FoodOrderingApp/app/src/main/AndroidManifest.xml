<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodorderingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/food_order_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/food_order_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Login"></activity>
        <activity android:name=".activity.Register"></activity>
        <activity android:name=".activity.ForgotPassword"></activity>
        <activity android:name=".activity.OTP"></activity>
        <activity android:name=".activity.MainActivity"></activity>
        <activity android:name=".activity.Dishes"></activity>
    </application>

</manifest>